# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/database_name"

# JWT Configuration
JWT_ACCESS_SECRET="your-secure-jwt-access-secret-32-chars-minimum"
JWT_REFRESH_SECRET="your-secure-jwt-refresh-secret-32-chars-minimum"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Server Configuration
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# External Services
LINEAR_KEY="your-linear-api-key-here"
WEBHOOK_SECRET="your-linear-webhook-secret-here"

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:4000"

# Rate Limiting Configuration
THROTTLE_LIMIT=100         # Default API rate limit (requests per minute)
AUTH_THROTTLE_LIMIT=10     # Auth endpoint rate limit (requests per 5 minutes)

# Optional Project Configuration
UNASSIGNED_PROJECT_ID="unassigned-project-default"

# Example Production Values:
# NODE_ENV=production
# LOG_LEVEL=warn
# PORT=8080
# CORS_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"
# JWT_ACCESS_SECRET="super-secure-jwt-access-secret-256-bits-minimum"
# JWT_REFRESH_SECRET="super-secure-jwt-refresh-secret-256-bits-minimum"
# THROTTLE_LIMIT=60
# AUTH_THROTTLE_LIMIT=5
# DATABASE_URL="mysql://user:pass@prod-db:3306/proddb"
