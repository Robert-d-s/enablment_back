# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/database_name"

# JWT Configuration
JWT_SECRET="your-secure-jwt-secret-key-here"
REFRESH_TOKEN_SECRET="your-secure-refresh-token-secret-here"
JWT_EXPIRATION="15m"
REFRESH_TOKEN_EXPIRATION="7d"

# Server Configuration
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# External Services
LINEAR_KEY="your-linear-api-key-here"
WEBHOOK_SECRET="your-linear-webhook-secret-here"

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:4000"

# Optional Project Configuration
UNASSIGNED_PROJECT_ID="unassigned-project-default"

# Example Production Values:
# NODE_ENV=production
# LOG_LEVEL=warn
# PORT=8080
# CORS_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"
# JWT_SECRET="super-secure-jwt-secret-256-bits-minimum"
